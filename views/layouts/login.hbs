<!DOCTYPE html>
<html>
    <head>
        <title>Login</title>
        <meta charset="utf-8">
        <link rel="stylesheet" href="/css/tailwind.css">
        <link rel="stylesheet" href="/css/login.css">
        <script src="/js/login.js" defer></script>
    </head>
    <body>
        <nav>
            <a href="/static/welcome">Book An Appointment</a>
        </nav>

        <div class="center">
            <h1>Login</h1>
            <form id="logForm">
                <div class="txt_field">
                    <input id="l_username" type="text" name="username" required>
                    <label>Username</label>
                </div>

                <div class="txt_field">
                    <input id="l_password" type="password" name="password" required>
                    <label>Password</label>
                </div>

                {{!-- <div class="pass">Forgot Password?</div> --}}

                <input class="submitBtn" id="loginBtn" type="submit" value="Login">
                <p class="error" id="l_error" hidden>Incorrect Login Details</p>

                <div class="signup_link">
                    Not a member? <a href="/static/register">Signup</a>
                </div>
            </form>
        </div>
    </body>
</html>